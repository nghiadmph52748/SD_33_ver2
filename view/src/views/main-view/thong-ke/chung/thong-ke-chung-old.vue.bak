    }
    return total
  }, 0)

  customRevenue.value = customOrdersList
    .filter((order: any) => order.trangThai === true || order.ngayThanhToan)
    .reduce((total: number, order: any) => {
      const amount = Number(order.tongTienSauGiam ?? order.tongTien ?? 0)
