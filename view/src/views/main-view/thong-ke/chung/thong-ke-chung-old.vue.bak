// H√†m ph√¢n lo·∫°i s·∫£n ph·∫©m d·ª±a tr√™n t√™n
const categorizeProduct = (productName: string): string => {
  const name = productName.toLowerCase()

  // Danh m·ª•c gi√†y th·ªÉ thao
  if (
    name.includes('sneaker') ||
    name.includes('gi√†y th·ªÉ thao') ||
    name.includes('running') ||
    name.includes('basketball') ||
    name.includes('tennis') ||
    name.includes('jogging')
  ) {
    return 'Gi√†y Th·ªÉ Thao'
  }

  // Danh m·ª•c gi√†y ch·∫°y b·ªô
  if (
    name.includes('ch·∫°y') ||
    name.includes('running') ||
    name.includes('marathon') ||
    name.includes('jogging') ||
    name.includes('track')
  ) {
    return 'Gi√†y Ch·∫°y B·ªô'
  }

  // Danh m·ª•c gi√†y b√≥ng ƒë√°
  if (
    name.includes('b√≥ng ƒë√°') ||
    name.includes('football') ||
    name.includes('soccer') ||
    name.includes('cleats') ||
    name.includes('futsal')
  ) {
    return 'Gi√†y B√≥ng ƒê√°'
  }

  // Danh m·ª•c gi√†y b√≥ng r·ªï
  if (name.includes('b√≥ng r·ªï') || name.includes('basketball') || name.includes('hoops')) {
    return 'Gi√†y B√≥ng R·ªï'
  }

  // Danh m·ª•c gi√†y tennis
  if (name.includes('tennis') || name.includes('qu·∫ßn v·ª£t')) {
    return 'Gi√†y Tennis'
  }

  // Danh m·ª•c gi√†y lifestyle
  if (
    name.includes('lifestyle') ||
    name.includes('casual') ||
    name.includes('street') ||
    name.includes('fashion') ||
    name.includes('th·ªùi trang')
  ) {
    return 'Gi√†y Lifestyle'
  }

  // Danh m·ª•c gi√†y cao g√≥t
  if (name.includes('cao g√≥t') || name.includes('heels') || name.includes('pumps')) {
    return 'Gi√†y Cao G√≥t'
  }

  // Danh m·ª•c gi√†y boot
  if (name.includes('boot') || name.includes('b·ªët') || name.includes('ankle')) {
    return 'Gi√†y Boot'
  }

  // Danh m·ª•c gi√†y sandal
  if (name.includes('sandal') || name.includes('d√©p') || name.includes('flip-flop')) {
    return 'Gi√†y Sandal'
  }

  // Danh m·ª•c kh√°c
  return 'Danh M·ª•c Kh√°c'
}

